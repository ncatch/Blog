@{
    Layout = null;
    ViewBag.Title = "Login";
}

<link href="~/Content/css/login.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.2.3.min.js"></script>
<script src="~/Scripts/js/login.js"></script>
<style type="text/css">
    * {
        margin: 0px;
        padding: 0px;
    }

    #bar {
        position: absolute;
        top: 0px;
        left: 0px;
        height: 2px;
        width: 0px;
        background-color: orange;
        z-index: 1000;
    }

    #bar_right {
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: 1001;
        width: 0px;
        height: 3px;
        background-color: orange;
        z-index: 1000;
        -webkit-backface-visibility: hidden;
        -webkit-filter: blur(3px);
        -moz-filter: blur(3px);
        -o-filter: blur(3px);
        -ms-filter: blur(3px);
        filter: blur(3px);
    }
</style>

<div id="bar"></div>
<div id="bar_right"></div>

<div id="bg"></div>
<div class="login">
    <div class="header">
        会员登录
    </div>
    <div class="web_qr_login" id="web_qr_login" style="display: block;">
        <div style="height:1px;text-align:center;margin-top:10px;">
            <label id="Login_Tip" style="font-size:16px;color:white;opacity:0.8;">@ViewBag.Tip</label>
        </div>
        <!--登录-->
        <div class="web_login" id="web_login">
            <div class="login-box">
                <div class="login_form">
                    <form name="loginform" accept-charset="utf-8" id="login_form" class="loginForm" method="post">
                        <input type="hidden" name="did" value="0" />
                        <input type="hidden" name="to" value="log" />
                        <div class="uinArea" id="uinArea">
                            <label class="input-tips" for="u"></label>
                            <div class="inputOuter" id="uArea">

                                <input type="text" id="username" value="用户名" name="UserLoginName" text="用户名" class="inputstyle" />
                            </div>
                        </div>
                        <div class="pwdArea" id="pwdArea">
                            <label class="input-tips" for="p"></label>
                            <div class="inputOuter" id="pArea">

                                <input type="text" id="userpwd" value="密码" title="密码" name="UserLoginPwd" text="密码" class="inputstyle" />
                            </div>
                        </div>

                        <div style="padding-left:50px;margin-top:20px;"><input type="button" value="登 录"  id="btn_login" style="width:150px;" class="button_blue" /></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
